@model enquete_asp.Models.RespostaModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enquete.ASP</title>
</head>
<body>
    <h1>Enquete.ASP!</h1>
    <h2>Você gostaria de ser imortal?</h2>
    <h4>Preencha todos os campos e marque sua resposta.</h4>
    <form method="POST">
        
        <div>
            <label asp-for="Nome">Insira seu nome: </label><br>
            <input asp-for="Nome">
        </div>
        
        <div>
            <label asp-for="Email">Insira seu e-mail: </label><br>
            <input asp-for="Email">
        </div>

        <div>
            Resposta:
            <div>
                <input type="radio" id="rdSim" asp-for="Sim" value="true">
                <label for="rdSim">Sim</label>
            </div>
            <div>
                <input type="radio" id="rdNao" asp-for="Sim" value="false">
                <label for="rdNao">Não</label>
            </div>
        </div>
        <input type="submit" value="Enviar">
    </form>
</body>
</html>